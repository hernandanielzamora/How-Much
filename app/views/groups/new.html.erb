<nav class="navbar-cont flex">
  <% if user_signed_in? %>
    <%= link_to image_tag("https://i.postimg.cc/28jqpTJJ/pngaaa-com-4731717.png' border='0' alt='pngaaa-com-4731717"), groups_path, class: 'back-arrow' %>
  <% else %>
