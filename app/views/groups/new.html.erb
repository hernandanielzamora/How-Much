<%= form_with model: @group, url: groups_path, class:'add-form flex' do |form| %>
  <div class="field">
    <%= form.text_field :name, placeholder: 'Enter the name for the category' %>
  </div>
  
  <div class="field">
    <%= form.text_field :icon, placeholder: 'Enter the url for the image' %>
  </div>

  <div class="submit">
    <%= form.submit 'Save' %>
  </div>
<% end %>


